<VirtualHost *:{{ http_port }}>
    ServerName {{ http_host }}
    DocumentRoot /var/www/{{ http_host }}
    
    <Directory /var/www/{{ http_host }}>
        Options Indexes FollowSymLinks
        AllowOverride All
        Require all granted
    </Directory>
    
    ErrorLog {{ http_log_dir }}/{{ http_host }}_error.log
    CustomLog {{ http_log_dir }}/{{ http_host }}_access.log combined
</VirtualHost>